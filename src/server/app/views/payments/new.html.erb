<h1>Please make the Payment</h1>

<form action="/charge" method="post" id="payment-form">
  <div class="form-group">
    <label for="card-element">
      Credit or debit card
    </label>
    <p>Price is $<strong><%= @teacher.price %></strong>CAD</p>
    <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>

    <!-- Used to display Element errors. -->
    <div id="card-errors" role="alert"></div>
  </div>

  <button>Submit Payment</button>
</form>

<%= form_tag lesson_payments_path(@lesson), id: 'stripe-token-form' do %>
  <%= hidden_field_tag :stripe_token %>
  <%= hidden_field_tag :user, current_user.id %>
  <%= hidden_field_tag :teacher, @lesson.teacher.id %>
  <%= hidden_field_tag :lesson, @lesson.id %>
<% end %>

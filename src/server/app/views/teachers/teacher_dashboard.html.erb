<div class="container-fluid padding">
  <div class="row welcome text-center">
		<div class="col-12">
            <h1>It's <%=current_user.first_name%>'s page</h1>
        </div>
   </div>
    <div class="dashboard-wrapper">

        <div class="lesson-box">
            <h2 class="text-center" >Your Upcoming lesson</h2>
        </div>

        <div class="requested-box">
            <h2 class="text-center">Requested lesson</h2>
               <% @requested_lessons.each do |lesson| %>
                 <div class="row col-md-6 col-lg-4 mx-auto">
                    <div class="card favourited-card">
                        <div class="card-body">
                          <span class=teacher-image> <%= fa_icon "user 5x", style: 'color: lightgrey;'%></span>
                            <div class="card-title">
                                <h3><%= lesson.user.full_name %> </h3><br />
                                <p><%= lesson.comment %></p>
                                <%= link_to fa_icon('thumbs-up'), favourite_path(teacher.favourite_ids) , method: :delete, style: 'color: blue;' %>
                            </div>
                            </p>
                         </div>   
                        </div>
                    </div>  
                </div>  
               <% end %>
        </div>

    </div>
</div>
